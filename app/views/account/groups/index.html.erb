<div class="col-md-12">

  <h2 class="text-center"> Bords I joined </h2>

  <table class="table">
    <thread>
      <tr>
        <th> ## </th>
        <th> Titles </th>
        <th> Descriptions </th>
        <th> Post Counts </th>
        <th> Last Updates </th>
      </tr>
    </thread>

    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td> ######</td>
        <td> <%= link_to(group.title, group_path(group)) %> </td>
        <td> <%= group.description %> </td>
        <td> <%=group.posts.count %> </td>
        <td> <%= group.updated_at %> </td>
      </tr>
    <% end %>
  </tbody>
 </table>
</div>
